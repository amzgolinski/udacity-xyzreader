<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/list_entry_height"
              android:layout_marginBottom="@dimen/list_item_margin"
              android:layout_marginLeft="@dimen/list_item_margin"
              android:layout_marginRight="@dimen/list_item_margin"
              android:layout_marginTop="@dimen/list_item_margin"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:paddingBottom="@dimen/list_item_vert_padding"
              android:paddingTop="@dimen/list_item_vert_padding">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <include layout="@layout/list_item_image"/>

  </FrameLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/list_item_horiz_padding"
      android:paddingStart="@dimen/list_item_horiz_padding"
      android:gravity="start">

    <include layout="@layout/list_item_content"/>

  </RelativeLayout>



</LinearLayout>