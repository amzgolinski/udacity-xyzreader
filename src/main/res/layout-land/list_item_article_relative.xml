<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/list_item_margin"
              android:layout_marginLeft="@dimen/list_item_margin"
              android:layout_marginRight="@dimen/list_item_margin"
              android:layout_marginTop="@dimen/list_item_margin"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:paddingBottom="@dimen/list_item_vert_padding"
              android:paddingTop="@dimen/list_item_vert_padding">

  <RelativeLayout
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="2"
      android:paddingEnd="72dp"
      android:paddingStart="@dimen/list_item_horiz_padding"
      android:gravity="right">

    <TextView
        android:id="@+id/article_title"
        style="@style/TextAppearance.AppCompat.Subhead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingBottom="4dp"
        android:text="Mysteries of the Universe Solved"
        android:textColor="@android:color/black"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/article_date"
        style="@style/list_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:text="July 4, 1776"/>

    <TextView
        android:id="@+id/article_author"
        style="@style/list_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:layout_toEndOf="@+id/article_date"
        android:layout_marginLeft="4dp"
        android:text="by Thomas Jefferson"
        android:textStyle="italic"/>


  </RelativeLayout>

  <RelativeLayout android:layout_width="0dp"
                  android:layout_height="match_parent"
    android:layout_weight="1"
    android:gravity="left">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="4dp"
        android:background="@android:color/black"
        android:layout_weight="1"
        android:adjustViewBounds="true"
        android:scaleType="fitStart"/>

  </RelativeLayout>


</LinearLayout>