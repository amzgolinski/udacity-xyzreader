<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="125dp"
              android:layout_marginBottom="@dimen/list_item_margin"
              android:layout_marginLeft="@dimen/list_item_margin"
              android:layout_marginRight="@dimen/list_item_margin"
              android:layout_marginTop="@dimen/list_item_margin"
              android:clickable="true"
              android:focusable="true"
              android:foreground="?selectableItemBackground"
              android:paddingBottom="@dimen/list_item_vert_padding"
              android:paddingEnd="@dimen/list_item_vert_padding"
              android:paddingStart="@dimen/list_item_horiz_padding"
              android:paddingTop="@dimen/list_item_horiz_padding">

  <FrameLayout
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
      android:id="@+id/thumbnail"
      android:layout_width="@dimen/image_width"
      android:layout_height="@dimen/image_height"
      style="@style/image"/>

  </FrameLayout>

  <RelativeLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:paddingEnd="@dimen/list_item_horiz_padding"
      android:paddingStart="@dimen/list_item_horiz_padding"
      android:gravity="start">

    <TextView
        android:id="@+id/article_title"
        style="@style/list_entry_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:paddingBottom="4dp"
        android:text="Mysteries of the Universe Solved"/>

    <TextView
        android:id="@+id/article_date"
        style="@style/list_entry_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:text="July 4, 1776"/>

    <TextView
        android:id="@+id/article_author"
        style="@style/list_entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title"
        android:layout_toEndOf="@+id/article_date"
        android:text="by Thomas Jefferson"/>


  </RelativeLayout>



</LinearLayout>